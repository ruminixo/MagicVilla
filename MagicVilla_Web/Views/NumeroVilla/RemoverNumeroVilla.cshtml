@model MagicVilla_Web.Models.ViewModel.NumeroVillaDeleteViewModel
@{
    ViewData["Title"] = "ActualizarNumeroVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CrearNumeroVilla</h1>

<form method="post" asp-action="RemoverNumeroVilla">
    <div class="container border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="NumeroVilla.VillaNo" hidden />
        <div class="row">
            <h2 class="text-info">Actualizar Nummero de Villa</h2>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <label class="form-label">Remover numero de Villa</label>
                <input asp-for="NumeroVilla.VillaNo" disabled class="form-control" />
                <span asp-validation-for="NumeroVilla" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">villa</label>
                <select asp-for="NumeroVilla.VillaId" disabled class="form-select" asp-items="@Model.VillaList">
                    <option value="">--Seleccione una Villa--</option>
                    <span asp-validation-for="NumeroVilla.VillaId" class="text-danger"></span>
                </select>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label clase="form-label">Detalle Especial</label>
                <textarea asp-for="NumeroVilla.DetalleEspecial" disabled class="form-control"></textarea>
                <span asp-validation-for="NumeroVilla.DetalleEspecial" class="text-danger"></span>
            </div>
        </div>
        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-danger">Remover</button>
            <a asp-controller="NumeroVilla" asp-action="IndexNumeroVilla"  class="btn btn-success">Regresar</a>
        </div>
    </div>
</form>

